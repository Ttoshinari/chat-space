.wrapper
  = render "groups/side_bar"



  .chat
    .header
      .left-header
        .left-header_title タイトル
        .left-header_members MEMBER
        .left-header_member takagi
      .right-header Edit
    .content
      = render @messages




  .form
    = form_for [@group, @message] do |f|
      = f.text_field :text, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden',type: 'hidden'
      = f.submit 'Send', class: 'form__submit'
